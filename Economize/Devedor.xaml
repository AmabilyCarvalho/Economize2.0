<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Economize.Devedor"
             BackgroundColor="#4D4D4D">

    <Grid RowSpacing="10" Padding="20">

        <!-- Título -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" 
                Grid.Column="0" 
                Text="DEVEDORES" 
                TextColor="Black" 
                BackgroundColor="White" 
                HorizontalOptions="Center"
                Margin="0,0,0,20"/>

        <!-- Lista de campos de devedores -->
        <StackLayout Grid.Row="1" Spacing="10">
            <Entry Placeholder="Devedor 1" BackgroundColor="White" TextColor="Black"/>
            <Entry Placeholder="Devedor 2" BackgroundColor="White" TextColor="Black"/>
            <Entry Placeholder="Devedor 3" BackgroundColor="White" TextColor="Black"/>
            <Entry Placeholder="Devedor 4" BackgroundColor="White" TextColor="Black"/>
            
            <!-- Botão para adicionar mais devedores -->
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="Novo devedor" BackgroundColor="White" TextColor="Black" HorizontalOptions="FillAndExpand"/>
                <Button Text="+" BackgroundColor="White" TextColor="Black" Clicked="OnAddDebtorButtonClicked"/>
            </StackLayout>
        </StackLayout>

        <!-- Botões inferiores -->
        <Grid Grid.Row="2" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" ImageSource="back_arrow.png" BackgroundColor="Transparent" Clicked="OnBackButtonClicked"/>
            <Button Grid.Column="2" ImageSource="settings_icon.png" BackgroundColor="Transparent" Clicked="OnSettingsButtonClicked"/>
            <Button Grid.Column="3" ImageSource="delete_icon.png" BackgroundColor="Transparent" Clicked="OnDeleteButtonClicked"/>
        </Grid>
    </Grid>

</ContentPage>